@using NTTBlog.Entity.VM.User
@model UserUpdateVM


<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">User / update User </span>
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <form asp-area="Admin" asp-controller="User" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <input  type="hidden" asp-for="Id"/>


                        <div class="form-group">
                            <label asp-for="FirstName" for="defaultFormControlInput" class="form-label">First Name</label>
                            <input asp-for="FirstName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Name..." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="FirstName"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="LastName" for="defaultFormControlInput" class="form-label">Last Name</label>
                            <input asp-for="LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Last Name..." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="LastName"></span>

                        </div>
                        

                        <div class="form-group">
                            <button class="btn btn-primary btn-block " type="submit">SAVE</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>





    </div>
</div>