@using NTTBlog.Entity.VM.User
@model List<UserVM>

<div class="container-xxl flex-grow-1 container-p-y">
<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">User Management /</span> User</h4>


<div class="card">
    <h5 class="card-header"> Users</h5>
    <div class="table-responsive text-nowrap">
        <a class="btn btn-outline-success m-1 mb-3 " asp-area="Admin" asp-controller="User" asp-action="Add">Add User <i class="bx bx-plus"> </i> </a>
        <table class="table table-bordered table-striped" id="usersTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Name</th>

                    <th>Last Name</th>
                    <th>Email</th>

                    <th>Phone Number</th>
                    <th>Role</th>
                    <th>Operation</th>
                    
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Name</th>

                    <th>Last Name</th>
                    <th>Email</th>

                    <th>Phone Number</th>
                    <th>Role</th>
                    <th>Operation</th>
                </tr>
            </tfoot>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr name="@item.Id">
                        <th>@item.Firstname</th>
                        <th>@item.LastName</th>
                        <th>@item.Email</th>
                        <th>@item.PhoneNumber</th>
                        <th>@item.Role</th>

                       

                        <th>
                            <a class="btn btn-primary btn-sm" data-id="@item.Id" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-userId="@item.Id"><i class="bx bxs-edit"></i></a>
                          

                        </th>


                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>



</div>
@section Scripts {
    <script src="~/js/userIndex.js" type="application/ecmascript"></script>
}