@using NTTBlog.Entity.VM.User
@model UserAddVM

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">User / Add User </span>
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <form asp-area="Admin" asp-controller="User" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div class="card-body">


                        <div class="form-group">
                            <label asp-for="Firstname" for="defaultFormControlInput" class="form-label">First Name</label>
                            <input asp-for="Firstname" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Name..." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Firstname"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="LastName" for="defaultFormControlInput" class="form-label">Last Name</label>
                            <input asp-for="LastName" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Last Name..." aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="LastName"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Email" for="defaultFormControlInput" class="form-label">EMail</label>
                            <input asp-for="Email" type="Email" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Email"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="PhoneNumber" for="defaultFormControlInput" class="form-label">Phone </label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="PhoneNumber"></span>

                        </div>

                        <div class="form-group">
                            <label asp-for="Password" for="defaultFormControlInput" class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control mb-3" id="defaultFormControlInput" placeholder="*********" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Password"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="RoleId" for="defaultFormControlInput" class="form-label">Role</label>
                            <select asp-for="RoleId" class="form-control mb-3" asp-items="@(new SelectList(Model.Roles,"Id","Name"))">

                            </select>
                            

                        </div>
                        



                        <div class="form-group">
                            <button class="btn btn-primary btn-block " type="submit">SAVE</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>





    </div>
</div>