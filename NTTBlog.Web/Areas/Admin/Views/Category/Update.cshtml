@using NTTBlog.Entity.VM.Categories

@model CategoryUpdateVM
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Category / Update Category </span>
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <form asp-area="Admin" asp-controller="Category" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div class="card-body">
                        <input  type="hidden" asp-for="Id"/>


                        <div class="form-group">
                            <label asp-for="Name" for="defaultFormControlInput" class="form-label">Category</label>
                            <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Update Category" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Name"></span>

                        </div>




                        <div class="form-group">
                            <button class="btn btn-primary btn-block " type="submit">SAVE</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>





    </div>
</div>