
@using NTTBlog.Entity.VM.NewFolder
@model List<CategoryVM>



<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Category Management /</span> Categories</h4>


    <div class="card">
        <h5 class="card-header"> Article</h5>
        <div class="table-responsive text-nowrap">
            <a class="btn btn-outline-success m-1 mb-3 " asp-area="Admin" asp-controller="Category" asp-action="Add">Add Category <i class="bx bx-plus"> </i> </a>
            <table class="table table-bordered table-striped" id="categoriesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        
                        <th>Created Date</th>
                        <th>Author</th>
                        
                        <th>Operation</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        
                        <th>Created Date</th>
                        <th>Author</th>
                        
                        <th>Operation</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model)
                    {
                        <tr name="@item.Id">
                            <th>@item.Name</th>
                           
                            <th>@item.CreateDate.ToShortDateString()</th>
                            <th>@item.CreatedBy</th>
                            
                            <th>
                                <a class="btn btn-primary btn-sm" data-id="@item.Id" asp-area="Admin" asp-controller="Category" asp-action="Update" asp-route-categoryId="@item.Id"><i class="bx bxs-edit"></i></a>
                               
                            </th>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>



</div>
@section Scripts {
    <script src="~/js/categoryIndex.js" type="application/ecmascript"></script>
}