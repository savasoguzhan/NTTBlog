@using NTTBlog.Entity.VM.Articles
@model List<ArticleVM>



<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Article Management /</span> Articles</h4>

    
    <div class="card">
        <h5 class="card-header"> Article</h5>
        <div class="table-responsive text-nowrap">
            <a class="btn btn-outline-success m-1 mb-3 " asp-area="Admin" asp-controller="Article" asp-action="Add">Add Article <i class="bx bx-plus"> </i> </a>
            <table class="table table-bordered table-striped" id="articlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Created Date</th>
                        <th>Author</th>
                        <th>Status</th>
                        <th>Operation</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Title</th>
                        <th>Category</th>
                        <th>Created Date</th>
                        <th>Author</th>
                        <th>Status</th>
                        <th>Operation</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                   @foreach(var item in Model)
                    {
                        <tr name="@item.Id">
                            <th>@item.Title</th>
                            <th>@item.Category.Name</th>
                            <th>@item.CreateDate.ToShortDateString()</th>
                            <th>@item.CreatedBy</th>
                            <th>@item.IsPublish</th>
                            <th>
                                <a class="btn btn-primary btn-sm" data-id="@item.Id" asp-area="Admin" asp-controller="Article" asp-action="Update" asp-route-articleId="@item.Id"><i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@item.Id" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-articleId="@item.Id"><i class="bx bx-folder-minus"></i></a>
                            </th>


                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    

   
</div>
@section Scripts{
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}