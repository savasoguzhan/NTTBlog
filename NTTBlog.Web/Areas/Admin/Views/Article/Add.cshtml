@using NTTBlog.Entity.VM.Articles
@model ArticleAddVM

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Article / Add Article </span>
    </h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <form asp-area="Admin" asp-controller="Article" asp-action="Add" method="post" enctype="multipart/form-data">
                    <div class="card-body">

                        <div class="form-group">
                            <label asp-for="CategoryId">Category</label>
                            <button type="button" class="btn text-secondary float-end" data-bs-toggle="modal" data-bs-target="#exampleModalCenter">
                                Add Category <i class="bx bx-plus"></i>
                            </button>


                            <label asp-for="CategoryId">Category</label>
                            <select id="categoryList" class="form-control" asp-for="CategoryId" asp-items="@(new SelectList(Model.Categories,"Id","Name"))">
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </select>

                        </div>
                        <div class="form-group">
                            <label asp-for="Title" for="defaultFormControlInput" class="form-label">Title</label>
                            <input asp-for="Title" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Title" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Title"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Tags" for="defaultFormControlInput" class="form-label">Tags</label>
                            <input asp-for="Tags" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Tags" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Tags"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="Content" for="defaultFormControlInput" class="form-label">Content</label>
                            <textarea asp-for="Content" type="text" class="form-control mb-3" id="defaultFormControlInput" style="min-height:350px;" placeholder="Content" aria-describedby="defaultFormControlHelp"></textarea>
                            <span asp-validation-for="Content"></span>


                        </div>
                        <div class="form-group">
                            <label asp-for="Photo" for="defaultFormControlInput" class="form-label">Chose Picture </label>
                            <input asp-for="Photo" type="file" class="form-control mb-3" id="defaultFormControlInput" aria-describedby="defaultFormControlHelp">
                            <span asp-validation-for="Photo"></span>


                        </div>



                        <div class="form-group">
                            <button class="btn btn-primary btn-block " type="submit">SAVE</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>





    </div>
</div>

<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Category</h5>
                <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label class="d-block form-label">Category Name</label>
                        <input class="form-control" type="text" id="categoryName" />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" data-keyboard="false" class="btn btn-primary" id="btnSave">Save changes</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {

    <script src="~/js/categoryAdd.js"></script>
    
    <script>
        var app = app || {};
        app.Urls = app.Urls || {};

        app.Ursl.baseUrl = '@Url.Content("~")';
        app.Urls.categoryAddUrl = "@(Url.Action("AddWithAjax", "Category"))";
        app.Urls.articleAddUrl = "@(Url.Action("Add", "Article"))";
    </script>
        

}